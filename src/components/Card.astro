---
interface Props {
  class?: string;
  [x: string]: any;
}

const defaulClass='default';
const { class: className = defaulClass, ...rest } = Astro.props;
---

<div {...rest}  class={className}>
  <slot/>
</div>

<style>
    .default{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color:darkgrey;
    }
  </style>